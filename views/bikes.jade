extends layout

block header
	include header-bikes

block content
	div.container
		h1 Homestead Bikes
		table.table
			thead
				tr
					th 
					th Name
					th Price
			tbody
				each item in bicycles
					tr
						td
							img(src='images/#{item.attributes.img}', width='140', height='192')
						td
							| #{item.attributes.name}
						td
							| #{item.attributes.price}